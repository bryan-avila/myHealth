<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".account_type_login_checker"
    android:background="@drawable/background_final_app_theme">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_myhealth_white"
            android:adjustViewBounds="true"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:scaleType="fitCenter"/>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/custom_purple_outline">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp" >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Are you a patient?"
                android:drawableRight="@drawable/icon_person"
                android:id="@+id/textView_Patient_checker"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/purple"/>



            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/button_Patient_checker"
                android:text="Press for Patient Login"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/goodGreen"
                android:textStyle="bold"
                android:onClick="onPatientClickChecker"
                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/custom_purple_outline">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp" >


            <TextView
                android:id="@+id/textView_Caretaker_checker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Are you a clinic?"
                android:drawableRight="@drawable/icon_hospital"
                android:textAlignment="center"
                android:textColor="@color/purple"
                android:textSize="25sp"
                android:textStyle="bold" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/button_Caretaker_checker"
                android:text="Press for Clinic Login"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/goodGreen"
                android:textStyle="bold"
                android:onClick="onCaretakerClickChecker"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>