<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_final_app_theme"
    tools:context=".patient_view_food_charts_page">

    <!-- Top Elements -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_myhealth_white"
        android:adjustViewBounds="true"
        android:maxWidth="80dp"
        android:maxHeight="80dp"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/text_view_charts_header_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today's Charts"
        android:textSize="30sp"
        android:textColor="@color/purple"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="65sp"
        android:layout_marginTop="85sp"/>

    <TextView
        android:id="@+id/text_view_charts_todays_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_charts_header_message"
        android:layout_centerInParent="true"
        android:layout_marginLeft="65sp"
        android:layout_marginTop="15sp"
        android:text="Default Date"
        android:textSize="30sp"
        android:textColor="@color/purple"/>

    <!-- Middle Elements -->

    <View
        android:layout_width="350sp"
        android:layout_height="400sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="195sp"
        android:background="@drawable/image_concept_food_charts"
        android:elevation="20sp"
        />

    <!-- Controls the nav bar at the very bottom -->

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/navigation_items"
        app:itemRippleColor="@color/lightpurple"
        app:itemIconTint="@color/bottom_nav_menu_icons_color"
        app:itemTextColor="@color/lightpurple"/>

</RelativeLayout>