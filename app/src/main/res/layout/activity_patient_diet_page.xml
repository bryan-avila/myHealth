<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".patient_diet_page"
    android:background="@drawable/background_patient_nutrition_page_v5">

    <!-- Controls the header/1st cardview -->

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_nutrition_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"
        app:cardCornerRadius="15dp"
        app:cardElevation="30dp">

        <TextView
            android:id="@+id/text_view_patient_nutrition_page_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="Nutrition"
            android:textSize="45sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

    </androidx.cardview.widget.CardView>

    <!-- Controls 2nd cardview -->

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_nutrition_info"
        android:layout_below="@id/card_view_nutrition_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >

        <TextView
            android:id="@+id/text_view_nutrition_default_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="LEFT TEXT."
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_view_nutrition_default_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="220sp"
            android:text="RIGHT TEXT."
            android:textColor="@color/black"
            android:textSize="20sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="400sp"
            android:layout_marginLeft="165sp"
            android:background="@android:color/black" />


        <View
            android:id="@+id/view_nutrition_info_background"
            android:layout_width="350sp"
            android:layout_height="400sp"
            android:elevation="50sp"/>

    </androidx.cardview.widget.CardView>

    <!-- Controls the three buttons at the bottom of screen -->

    <Button
        android:id="@+id/button_view_charts"
        android:text="View Charts"
        android:textSize="12sp"
        android:layout_width="120sp"
        android:layout_height="60sp"
        android:background="@drawable/button_rounded"
        android:layout_marginTop="580sp"
        android:layout_marginLeft="5dp"
        android:backgroundTint="@color/purple"
        android:elevation="10dp"/>

    <Button
        android:id="@+id/button_add_foods"
        android:text="Add Food"
        android:textSize="12sp"
        android:layout_width="120sp"
        android:layout_height="60sp"
        android:background="@drawable/button_rounded"
        android:layout_marginLeft="145sp"
        android:layout_marginTop="580sp"
        android:onClick="onAddFoodClick"
        android:elevation="8dp"
        />

    <Button
        android:id="@+id/button_view_favorites"
        android:text="View Favorites"
        android:textSize="12sp"
        android:layout_width="120sp"
        android:layout_height="60sp"
        android:background="@drawable/button_rounded"
        android:layout_marginLeft="25sp"
        android:layout_toRightOf="@id/button_add_foods"
        android:layout_marginTop="580sp"
        android:elevation="8dp"
        />

    <!-- Controls the nav bar at the very bottom -->

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/navigation_items"
        app:itemRippleColor="@color/lightpurple"
        app:itemIconTint="@color/bottom_nav_menu_icons_color"
        app:itemTextColor="@color/lightpurple"/>


</RelativeLayout>